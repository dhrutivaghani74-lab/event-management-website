function displayEvents() {
    let events = JSON.parse(localStorage.getItem("events")) || [];
    let eventList = document.getElementById("eventList");

    eventList.innerHTML = "";

    events.forEach((event, index) => {
        eventList.innerHTML += `
            <div class="event-card">
                <h3>${event.name}</h3>
                <p>Date: ${event.date}</p>
                <p>Location: ${event.location}</p>
            </div>
        `;
    });
}
